                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/ic_uncheck"
                android:gravity="center_vertical"
                android:text="@string/change_screen_request"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keep_screen_land"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/setlect_white_focus"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/keep_screen_land"
            android:nextFocusRight="@id/keep_screen_land"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/screen_land"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/ic_uncheck"
                android:gravity="center_vertical"
                android:text="@string/keep_screen_land"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/voice_auto"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/setlect_white_focus"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/voice_auto"
            android:nextFocusRight="@id/voice_auto"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="33dp" >

            <TextView
                android:id="@+id/tx_voice_auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/on"
                android:gravity="center_vertical"
                android:text="@string/voice_auto"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/voice_setting"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/setlect_white_focus"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/voice_setting"
            android:nextFocusRight="@id/voice_setting"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
            	android:id="@+id/tx_voice_setting"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/voice_setting"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
            	android:id="@+id/tx_voice_mode"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>
        
